<form action="/records/new" method="POST" class="container m-5 col">
  <div class="col-7 mx-auto">
    <label for="email" class="col-sm-2 col-form-label">必填欄位*:</label>
    <label for="email" class="col-sm-2 col-form-label">請輸入你的支出</label>
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">名稱*:</label>
      <div class="col-sm-5 m-2">
        <input type="text" class="border border-dark form-control-plaintext" id="name" name="name" value="">
      </div>
    </div>
    <div class="form-group row">
      <label for="money" class="col-sm-2 col-form-label">日期*:</label>
      <div class="col-sm-5 m-2">
        <input type="date" class="border border-dark form-control-plaintext" id="date" name="date" value="">
      </div>
    </div>
    <div class="form-group row">
      <label for="category" class="col-sm-2 col-form-label">類別*:</label>
      <div class="col-sm-5 m-2">
        <select name="category" class="form-select form-select-m border border-dark"
          aria-label=".form-select-sm example">
          <option selected>類別</option>
          {{#each category}}
          <option value="{{this.name}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="amount" class="col-sm-2 col-form-label">金額*:</label>
      <div class="col-sm-5 m-2">
        <input type="number" class="border border-dark form-control-plaintext" id="amount" name="amount" value="">
      </div>
    </div>
    <div class="col-5 mt-2">
      <button type="submit" class="btn btn-outline-dark form-control-plaintext">新增支出</button>
    </div>
  </div>
  </div>
</form>