{{!-- 分類 --}}
<div class="container">
  <div class="row">
    <div class="col-4 mt-5">
      <div class="">
        <div class="dropdown">
          <a class="btn btn-outline-danger dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> {{!--data-bs-toggle 摺疊選單 --}}
            類別{{#if title}}({{title}}){{/if}}
          </a>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <li><a class="dropdown-item" href="/records/search?filter=家居物業">家居物業</a></li>
            <li><a class="dropdown-item" href="/records/search?filter=交通出行">交通出行</a></li>
            <li><a class="dropdown-item" href="/records/search?filter=休閒娛樂">休閒娛樂</a></li>
            <li><a class="dropdown-item" href="/records/search?filter=餐飲食品">餐飲食品</a></li>
            <li><a class="dropdown-item" href="/records/search?filter=其他">其他</a></li>
          </ul>
        </div>
      </div>
      <h5 class="mt-3">總金額:</h5>
      <h5 class="text-end" style="font-size: 6em; color: tomato;">{{totalAmount}}</h5>
    </div>
    {{#if record}}
    <div>
      <table class="table table-striped" style="width: 700px; position:block;">
        <tbody>
          {{#each record}}
          <tr>
            <td>
              <div class="mt-3"><i class="{{this.categoryId.icon}} fa-2xl m-3"></i></div>
            </td>
            <td>
              <div class="ms-2 mx-auto">
                <div class="">
                  <h2 class="mt-0">{{this.name}}</h2>
                </div>
                {{this.date}}
              </div>
            </td>
            <td>
              <h4 class="m-4">{{this.amount}}</h4>
            </td>
            <td>
              <a href="/records/{{this._id}}/edit" class="btn btn-outline-dark mt-3">修改</a>
            </td>
            <td>
              <form action="/records/{{this._id}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-outline-danger mt-3">刪除</button>
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{/if}}
  </div>
  <div class="mt-3">
    <a href="/records/new" class="btn btn-danger col-2">新增支出</a>
  </div>
</div>