{{!-- 分類 --}}
<div class="container">
  <div class="row">
    <div class="col-4 mt-5">
      <div class="">
        <div class="dropdown">
          <a class="btn btn-light border border-dark dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> {{!--data-bs-toggle 摺疊選單 --}}
            類別{{#if categorySort}}({{categorySort}}){{/if}}
          </a>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <li><a class="dropdown-item" href="/">全部</a></li>
            <li><a class="dropdown-item" href="/records/search?filter=家居物業">家居物業</a></li>
            <li><a class="dropdown-item" href="/records/search?filter=交通出行">交通出行</a></li>
            <li><a class="dropdown-item" href="/records/search?filter=休閒娛樂">休閒娛樂</a></li>
            <li><a class="dropdown-item" href="/records/search?filter=餐飲食品">餐飲食品</a></li>
            <li><a class="dropdown-item" href="/records/search?filter=其他">其他</a></li>
          </ul>
        </div>
      </div>
      <h5 class="mt-2">總金額:</h5>
      <h5 class="text-center" style="font-size: 4em; color:rgb(36, 36, 36)">{{totalAmount}}</h5>
    </div>
    {{#if record}}
    <div>
      <table class="table table-striped" style="width: 600px; text-align:center; position:block;">
        <tbody>
          {{#each record}}
          <tr>
            <td style="width: 100px;">
              <div class="mt-3"><i class="{{this.categoryId.icon}} fa-2xl mt-4"></i></div>
            </td>
            <td style="width: 200px;">
              <div class="">
                <div class="">
                  <h3 class="mt-2">{{this.name}}</h3>
                </div>
                {{this.date}}
              </div>
            </td>
            <td style="width: 100px;">
              <h4 class="mt-4">{{this.amount}}</h4>
            </td>
            <td style="width: 100px;">
              <a href="/records/{{this._id}}/edit" class="btn btn-light border border-dark mt-3 pe-4 ps-4">修改
              </a>
            </td>
            <td style="width: 100px;">
              <form action="/records/{{this._id}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-dark border border-dark mt-3 pe-4 ps-4">刪除</button>
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{/if}}
  </div>
  <div class="mt-3">
    <a href="/records/new" class="btn btn-light border border-dark col-2">新增支出</a>
  </div>
</div>